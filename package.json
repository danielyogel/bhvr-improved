{
  "name": "bhvr",
  "version": "0.4.0",
  "description": "A monorepo template built with Bun, Hono, Vite, and React",
  "author": "Daniel Yogel",
  "license": "MIT",
  "homepage": "https://github.com/danielyogel/bhvr-improved",
  "packageManager": "bun@1.2.19",
  "workspaces": {
    "packages": [
      "./server",
      "./client",
      "packages/*"
    ],
    "catalog": {
      "typescript": "5.8.3"
    }
  },
  "scripts": {
    "dev": "turbo dev",
    "dev:client": "turbo dev --filter=client",
    "dev:server": "turbo dev --filter=@repo/server",
    "build": "turbo build",
    "build:client": "turbo build --filter=client",
    "build:server": "turbo build --filter=@repo/server",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "test": "turbo test",
    "postinstall": "turbo build --filter=@repo/shared --filter=@repo/server"
  },
  "keywords": [
    "bun",
    "hono",
    "react",
    "vite",
    "monorepo",
    "turbo"
  ],
  "devDependencies": {
    "bun-types": "latest",
    "concurrently": "^9.2.0",
    "turbo": "^2.5.5"
  },
  "prettier": {
    "singleQuote": true,
    "semi": true,
    "trailingComma": "none",
    "printWidth": 120
  }
}
